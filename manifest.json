{
  "manifest_version": 2,
  "name": "Skiir Plugin",
  "description": "Request for explanations in articles on Bloomberg.com",
  "version": "1.0",
  "permissions": [
    "declarativeContent",
    "tabs",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.bloomberg.com/*"],
      "run_at": "document_end",
      "js": [
        //"angular.min.js",
        //"ui-bootstrap-tpls-0.12.1.min.js",
        "content_script.js"
      ]
    },
    {
      "matches": ["http://www.bloomberg.com/*"],
      "all_frames": true,
      "css": ["style.css"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js",
      "popup.js" ],
    "persistent": false
  }
}