{
  "manifest_version": 2,

  "name": "Skiir Plugin",
  "description": "Request for explanations in articles on Bloomberg.com",
  "version": "0.1",
  "background_page" : "background.html",

  "permissions" : [
    "tabs",
    "contextMenus",
    "http://www.google.com/buzz/api/buzzThis/buzzCounter"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.bloomberg.com//*"],
      "js": ["jquery.js", "clean.js"]
    },
    {
      "matches": ["http://www.bloomberg.com/*"],
      "all_frames": true,
      "css": ["bbclean.css"]
    }
  ],
  "browser_action": {
    "default_icon": "tudelft_logo.png"
  },
  "web_accessible_resources": ["tudelft_logo.png"]
}