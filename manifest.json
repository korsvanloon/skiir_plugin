{
  "manifest_version": 2,
  "name": "Skiir Plugin",
  "description": "Request for explanations in articles on Bloomberg.com",
  "version": "1.0",
  "permissions": [
    "declarativeContent",
    "tabs",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": ["http://www.bloomberg.com/*"],
      "js": [
        "jquery.js"
      ]
    },
    {
      "matches": ["http://www.bloomberg.com/*"],
      "all_frames": true,
      "css": ["bbclean.css"]
    }
  ],

  "page_action": {
    //    "default_icon": "tudelft_logo.png"
    "default_popup": "popup.html"

  },
  "background": {
    "scripts": [
      "background.js",
      "popup.js" ],
    "persistent": false
  }
}